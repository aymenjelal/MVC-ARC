@model IEnumerable<ClassPlustMVC.Models.Assignment>

@{
    ViewData["Title"] = "PendingAssignments";
}

<h2>Pending Assignments</h2>

<div class="row">
    @foreach (var item in Model)
    {



        <div class="demo-card-square mdl-card mdl-shadow--2dp col-sm-5" style=" margin-bottom:15px; margin-left:10px; padding-left:0px">
            <div class="mdl-card__title mdl-card--expand" style="background: #00467F; background: -webkit-linear-gradient(to right, #A5CC82, #00467F); background: linear-gradient(to right, #A5CC82, #00467F); width:80rem;">
                <h2 class="mdl-card__title-text" style="color:white"> @Html.DisplayFor(modelItem => item.Topic)</h2>
            </div>
            <div class="mdl-card__supporting-text" style="padding-left:15px">
                <div class="row">
                    <div class="col-sm-3">
                        <h6> @Html.DisplayNameFor(model => model.Course)</h6>
                    </div>
                    <div class="col-sm-6">
                        <h6> @Html.DisplayFor(modelItem => item.Course.CourseName)</h6>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <h6>@Html.DisplayNameFor(model => model.PostDate)</h6>
                    </div>
                    <div class="col-sm-3">
                        <h6>@Html.DisplayFor(modelItem => item.PostDate)</h6>

                    </div>
                    

                </div>

                <div class="row">
                    <div class="col-sm-3">
                        <h6>@Html.DisplayNameFor(model => model.Deadline)</h6>
                    </div>
                    <div class="col-sm-3">
                        <h6>@Html.DisplayFor(modelItem => item.Deadline)</h6>

                    </div>

                </div>

                <div class="row">
                    <form asp-controller="Responses" asp-action="Create" asp-route-id="@item.AssignmentId" enctype="multipart/form-data" method="post">
                        <div class="col-sm-8">
                            <div class="mdl-textfield mdl-js-textfield ">
                            <input type="file" name="files" class="mdl-textfield__input" required/>
                        </div>
                        </div>
                        


                        <div class="col-sm-2">
                            <button type="submit"  class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--primary">
                                <i class="material-icons">attach_file</i>
                            </button>
                            


                        </div>
                    </form>
                        <div class="col-sm-2">
                            <button onclick="location.href='@Url.Action("DownloadFile")/@item.CourseId'" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--primary">
                                <i class="material-icons">attachment</i>
                            </button>

                        </div>
                </div>
            </div>




        </div>

    }
</div>
