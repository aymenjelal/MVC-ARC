@{
    ViewData["Title"] = "Home Page";
}

<div id="homeContent" style="margin-top:30px; padding-left:0px; ">

    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000" style="padding-left:0px;">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>

        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/slide_3.jpg" alt="ASP.NET" class="img-responsive" style="width: 1519px; height:650px" />
                <div class="carousel-caption" role="option">
                    <p>
                        Get started today. Search for a course you want and get Enroll
                        
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/slide_1.jpg" alt="Visual Studio" class="img-responsive" style="width: 1519px; height:650px" />
                <div class="carousel-caption" role="option">
                    <p>
                        Class plus offers a platform for teachers and students to Share files in an easy way 
                        
                    </p>
                </div>
            </div>

        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="row" style="padding-top:15px;">




        <div class="demo-card-square mdl-card mdl-shadow--2dp col-sm-5" style="margin-bottom:15px; margin-left:10px; padding-left:0px">
            <div class="mdl-card__title mdl-card--expand" style="background: #00467F; background: -webkit-linear-gradient(to right, #A5CC82, #00467F); background: linear-gradient(to right, #A5CC82, #00467F); width:80rem;">
                <h2 class="mdl-card__title-text" style="color:white"> Students</h2>
            </div>
            <div class="mdl-card__supporting-text" style="padding-left:15px">
                <div class="row">
                    <div class="col-sm-12">
                        <h5>Enroll in A Course of your choice</h5>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <h5>Check out for Assignmnets</h5>
                    </div>


                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <h5>Dont forget to post your responses before the deadline</h5>
                    </div>

                </div>


            </div>
        </div>

        <div class="demo-card-square mdl-card mdl-shadow--2dp col-sm-5" style="margin-bottom:15px; margin-left:10px; padding-left:0px">
            <div class="mdl-card__title mdl-card--expand" style="background: #00467F; background: -webkit-linear-gradient(to right, #A5CC82, #00467F); background: linear-gradient(to right, #A5CC82, #00467F); width:80rem;">
                <h2 class="mdl-card__title-text" style="color:white"> Students</h2>
            </div>
            <div class="mdl-card__supporting-text" style="padding-left:15px">
                <div class="row">
