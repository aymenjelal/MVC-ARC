@model IEnumerable<ClassPlustMVC.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="row">

        @foreach (var item in Model)
        {
         


                <div class="demo-card-square mdl-card mdl-shadow--2dp col-sm-5" style=" margin-bottom:15px; margin-left:10px; padding-left:0px">
                    <div class="mdl-card__title mdl-card--expand" style="background: #00467F; background: -webkit-linear-gradient(to right, #A5CC82, #00467F); background: linear-gradient(to right, #A5CC82, #00467F); width:80rem;">
                        <h2 class="mdl-card__title-text" style="color:white"> @Html.DisplayFor(modelItem => item.Course.CourseName)</h2>
                    </div>
                    <div class="mdl-card__supporting-text" style="padding-left:15px">
                        <div class="row">
                            <div class="col-sm-12">
                                <h5>@Html.DisplayFor(modelItem => item.Course.CourseDescription)</h5>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6>@Html.DisplayNameFor(model => model.Course.TeacherId)</h6>
                            </div>
                            <div class="col-sm-6">
                                <h6>@Html.DisplayFor(modelItem => item.Course.TeacherId)</h6>

                            </div>

                        </div>

                        <div class="row">
                            <div class="col-sm-3">
                                <h6>@Html.DisplayNameFor(model => model.Course.SchoolName)</h6>
                            </div>
                            <div class="col-sm-6">
                                <h6>@Html.DisplayFor(modelItem => item.Course.SchoolName)</h6>

                            </div>

                        </div>

                        <div class="row">
                            <div class="col-sm-4"></div>
                            <div class="col-sm-2">
                            </div>
                            <div class="col-sm-2">



                            </div>

                            <div class="col-sm-2">
                                <button onclick="location.href='@Url.Action("PendingAssignment","assignments")/@item.CourseId'" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--primary">
                                    <i class="material-icons">description</i>
                                </button>


                            </div>
                            <div class="col-sm-2">
                                <button onclick="location.href='@Url.Action("Delete")/@item.EnrollmentId'" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--primary">
                                    <i class="material-icons">delete</i>
                                </button>

                            </div>
                        </div>
                    </div>




                </div>
            
        }


</div>
