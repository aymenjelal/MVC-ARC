@model IEnumerable<ClassPlustMVC.Models.Course>

@{
    ViewData["Title"] = "StudentIndex";
}

<h2>Available Cources</h2>

<form asp-action="Enroll">
    @foreach (var item in Model)
    {
        <div class="row">


            <div class="demo-card-square mdl-card mdl-shadow--2dp col-sm-5" style="width: 80rem; margin-bottom:10px; padding-left:0px">
                <div class="mdl-card__title mdl-card--expand" style="background-color:#FFAB40; width:80rem;">
                    <h2 class="mdl-card__title-text" style="color:white"> @Html.DisplayFor(modelItem => item.CourseName)</h2>
                </div>
                <div class="mdl-card__supporting-text" style="padding-left:15px">
                    <div class="row">
                        <div class="col-sm-10">
                            <h5>@Html.DisplayFor(modelItem => item.CourseDescription)</h5>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-2">
                            <h6>@Html.DisplayNameFor(model => model.TeacherId)</h6>
                        </div>
                        <div class="col-sm-6">
                            <h6>@Html.DisplayFor(modelItem => item.TeacherId)</h6>

                        </div>

                    </div>

                    <div class="row">
                        <div class="col-sm-2">
                            <h6>@Html.DisplayNameFor(model => model.SchoolName)</h6>
                        </div>
                        <div class="col-sm-6">
                            <h6>@Html.DisplayFor(modelItem => item.SchoolName)</h6>

                        </div>

                    </div>

                    <div class="row">
                        <div class="col-sm-1">
                            <button type="submit" asp-route-id="@item.CourseId" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">Enroll</button>
                        </div>

                    </div>
                </div>




            </div>
        </div>
    }
</form>

<form asp-action="Enroll">
    <table class="table">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TeacherId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SchoolName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {


                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeacherId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SchoolName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>

                    <td>
                        <button type="submit" asp-route-id="@item.CourseId" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">Enroll</button>

                    </td>

                </tr>




            }
        </tbody>
    </table>
</form>
