@model IEnumerable<ClassPlustMVC.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach(var item in Model)
{
<div class="row">
   
 
        <div class="demo-card-square mdl-card mdl-shadow--2dp col-sm-5" style="width: 70rem; margin-bottom:10px; padding-left:0px">
            <div class="mdl-card__title mdl-card--expand" style="background-color:#FFAB40; width:80rem;">
                <h2 class="mdl-card__title-text" style="color:white"> @Html.DisplayFor(modelItem => item.CourseName)</h2>
            </div>
            <div class="mdl-card__supporting-text" style="padding-left:15px">
                <div class="row" >
                    <div class="col-sm-10">
                        <h5>@Html.DisplayFor(modelItem => item.CourseDescription)</h5>
                    </div>
                    
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <h6>@Html.DisplayNameFor(model => model.TeacherId)</h6>
                    </div>
                    <div class="col-sm-6">
                        <h6>@Html.DisplayFor(modelItem => item.TeacherId)</h6>

                    </div>

                </div>

                <div class="row">
                    <div class="col-sm-2">
                        <h6>@Html.DisplayNameFor(model => model.SchoolName)</h6>
                    </div>
                    <div class="col-sm-6">
                        <h6>@Html.DisplayFor(modelItem => item.SchoolName)</h6>

                    </div>

                </div>

                <div class="row">
                    <div class="col-sm-1">
                        <button onclick="location.href='@Url.Action("Edit")/@item.CourseId'" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary">Edit</button>
                        

                    </div>
                    <div class="col-sm-1">
                        <button onclick="location.href='@Url.Action("Delete")/@item.CourseId'" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary">Delete</button>

                    </div>
                </div>

            </div>
        </div>
 



</div>
}
