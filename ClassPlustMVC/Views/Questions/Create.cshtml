@model ClassPlustMVC.Models.Question

@{
    ViewData["Title"] = "Create";
}


<h2>Post A Question</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">

                <label asp-for="QuestionContent" class="control-label"></label>
                <textarea asp-for="QuestionContent" class="form-control" rows="6" cols="10"></textarea>
                <span asp-validation-for="QuestionContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Post" class="btn btn-default mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
